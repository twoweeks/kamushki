{
    "name": "@twoweeks/twg20-web",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "author": "Dmitry <dmitry@cojam.ru> (https://e965.ru)",
    "license": "MIT",
    "repository": "https://github.com/twoweeks/twg20-web.git",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "jest",
        "prettier": "prettier --write **/*.{json,yml,yaml,md,php,js,ts,tsx}",
        "lint-staged": "lint-staged",
        "prepare": "is-ci || husky install",
        "eslint": "eslint .",
        "build:all": "npm run build --workspaces",
        "copy-client-files": "ncp packages/client/dist/ packages/server/dist/client-files/",
        "build:client": "npm run build -w packages/client",
        "build:server": "npm run build -w packages/server",
        "start:client": "npm start -w packages/client",
        "start:server": "npm start -w packages/server",
        "assemble": "npm run build:all && npm run copy-client-files"
    },
    "lint-staged": {
        "*.{json,yml,yaml,md,php,js,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@types/node": "16.4.7",
        "@typescript-eslint/eslint-plugin": "4.28.5",
        "@typescript-eslint/parser": "4.28.5",
        "del-cli": "4.0.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "husky": "7.0.1",
        "is-ci": "3.0.0",
        "lint-staged": "11.1.1",
        "ncp": "2.0.0",
        "prettier": "2.3.2",
        "typescript": "4.3.5"
    }
}
